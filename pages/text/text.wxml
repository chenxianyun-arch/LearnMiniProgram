<text>pages/text/text.wxml</text>
<!-- 1.基本使用 -->
<text>我是text\n</text>
<text>我是text\n</text>
<!-- 2.selectable：true 文本可以被选中-->
<text selectable="{{true}}">hello 陈贤云\n</text>
<text selectable>hello 陈贤云\n</text>

<!-- 3.决定文本空格大小：space: -->
<text>hello world\n</text>
<text space="emsp">hello world\n</text>
<text space="nbsp">hello world\n</text>
<text space="ensp">hello world\n</text>

<!-- 4.decode 解码文本 -->
<text decode>5 &gt;</text>
<text decode="{{true}}">5 &gt; 3</text>
